<p id="notice"><%= notice %></p>

<p>
  <b>Content:</b>
  <%= @question.content %>
</p>

<p id="startdate">
<b>Startdate:</b>
  <%= @question.startdate %>
</pv>

<p id="enddate">
<b>Enddate:</b>
  <%= @question.enddate %>
  </p>
