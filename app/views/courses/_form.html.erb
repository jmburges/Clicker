<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  Students: <br />
  <% User.students.each do |user|%>
    <%= check_box_tag :user_id, user.id, @course.users.include?(user),:name =>"course[UserCourses_attributes][#{user.id}][user_id]",:id =>"course_UserCourses_attributes_#{user.id}_user_id" %>
    <%= user.email %><br />
  <% end %>
  <br />
  Teachers: <br />
  <% User.teachers.each do |user|%>
    <%= check_box_tag :user_id, user.id, @course.users.include?(user),:name =>"course[UserCourses_attributes][#{user.id}][user_id]",:id =>"course_UserCourses_attributes_#{user.id}_user_id" %>
    <%= user.email %><br />
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
